@using BlazingTrails.Client.Features.Home.ViewModels
            
<img src="images/@Trail.Image" alt="photo from trail"/>
<div class="trail-details">
    <h3>@Trail.Name</h3>
    <h6 class="mb-3 text-muted">
        <span class="oi oi-map-marker"></span>
        @Trail.Location
    </h6>
    <div class="mt-4">
        <span class="mr-5">
            <span class="oi oi-clock mr-2"></span>
            @Trail.TimeFormatted
        </span>
        <span>
            <span class="oi oi-infinity mr-2"></span>
            @Trail.LengthKm km
        </span>
    </div>
    <p class="mt-4">@Trail.Description</p>
</div>
@if (Trail.Waypoints.Any())
{
    <RouteMap Waypoints="_activeTrail.Waypoints"
              IsReadOnly="true"/>
}
@code {
    [Parameter, EditorRequired]
    public Trail Trail { get; set; }
}