@using BlazingTrails.Client.AppState
@inject AppState AppState

@if (AppState.FavoriteTrailsState.IsFavorite(Trail))
{
    <button class="btn btn-outline-primary m-lg-1"
            title="Favorite">
        <i class="bi bi-heart-fill"></i>
    </button>
}
else
{
    <button class="btn btn-outline-primary m-lg-1"
            title="Favorite"
            @onclick="@(() => AppState.FavoriteTrailsState.AddFavorite(Trail))">
        <i class="bi bi-heart"></i>
    </button>
}

@code
{
    [Parameter, EditorRequired]
    public Trail Trail { get; set; } = default!;
}
